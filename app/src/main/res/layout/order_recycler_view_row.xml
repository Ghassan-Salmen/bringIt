<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_margin="10dp"
    android:elevation="2dp">



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             tools:text="Order Place"
             android:textSize="18sp"
             android:textStyle="bold"
             android:id="@+id/order_place_item_text"/>


         <TextView
             android:id="@+id/order_time_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="10dp"
             tools:text="10:00"

             />

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <TextView
             android:id="@+id/order_title_item_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"

             tools:text="order Title" />


         <TextView
             android:id="@+id/order_date_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="10dp"
             tools:text="22-02-2002"

             />

      </RelativeLayout>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="ordered by"
          android:id="@+id/order_member_name_item_text"

          />
   </LinearLayout>

</LinearLayout>